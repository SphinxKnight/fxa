{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "fxa",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "build-l10n",
          "build-l10n-test",
          "build-storybook",
          "compile",
          "lint",
          "prebuild",
          "test",
          "test-unit",
          "test-integration",
          "test-e2e"
        ]
      }
    }
  },
  "targetDefaults": {
    "compile": {
      "dependsOn": ["^compile"]
    },
    "prebuild": {
      "dependsOn": ["^prebuild"],
      "inputs": ["production", "^production"],
      "outputs": [
        "{projectRoot}/build",
        "{projectRoot}/dist",
        "{projectRoot}/public/locales",
        "{projectRoot}/public/legal-docs",
        "{workspaceRoot}/packages/fxa-auth-server/vendor/ejs.js",
        "{workspaceRoot}/packages/fxa-content-server/app/styles/main.css",
        "{workspaceRoot}/packages/fxa-content-server/server/config/local.json"
      ]
    },
    "build": {
      "dependsOn": ["^build", "prebuild"],
      "inputs": ["production", "^production"],
      "outputs": [
        "{projectRoot}/build",
        "{projectRoot}/dist",
        "{projectRoot}/public",
        "{workspaceRoot}/packages/fxa-auth-server/vendor/ejs.js",
        "{workspaceRoot}/packages/fxa-content-server/.tmp",
        "{workspaceRoot}/packages/fxa-content-server/app/i18n",
        "{workspaceRoot}/packages/fxa-auth-server/lib/senders/emails/css",
        "{workspaceRoot}/packages/fxa-admin-panel/src/styles/tailwind.out.css",
        "{workspaceRoot}/packages/fxa-content-server/server/config/local.json",
        "{workspaceRoot}/packages/fxa-payments-server/tsconfig.tsbuildinfo"
      ]
    },
    "build-storybook": {
      "dependsOn": ["build"],
      "inputs": ["production", "^production"],
      "outputs": ["{project-root}/storybook-static"]
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"],
      "outputs": ["{projectRoot}/.eslintcache"]
    },
    "test": {
      "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.js"],
      "dependsOn": ["test-unit", "test-integration", "test-e2e"],
      "outputs": [
        "{projectRoot}/coverage",
        "{projectRoot}/.nyc_output",
        "{projectRoot}/test-results.xml"
      ]
    },
    "test-unit": {
      "dependsOn": ["build"],
      "outputs": [
        "{projectRoot}/coverage",
        "{projectRoot}/.nyc_output",
        "{projectRoot}/test-results.xml"
      ]
    },
    "test-integration": {
      "dependsOn": ["build", "build-l10n-test"],
      "outputs": [
        "{projectRoot}/coverage",
        "{projectRoot}/.nyc_output",
        "{projectRoot}/test-results.xml"
      ]
    },
    "test-e2e": {
      "dependsOn": ["build"],
      "outputs": [
        "{projectRoot}/coverage",
        "{projectRoot}/.nyc_output",
        "{projectRoot}/test-results.xml"
      ]
    },
    "start": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "storybook": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "restart": {
      "dependsOn": ["build"],
      "outputs": []
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{workspaceRoot}/packages/version.json",
      "!{projectRoot}/public/locales",
      "!{projectRoot}/public/legal-docs",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/.vscode/**/*",
      "!{projectRoot}/tests/**/*",
      "!{projectRoot}/test/**/*",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/tsconfig.json"
    ],
    "test": ["sharedGlobals", "{projectRoot}/**/*.[jt]s?x"],
    "lint": ["{projectRoot}/**/*.[jt]s?x"],
    "sharedGlobals": []
  },
  "cli": {
    "packageManager": "yarn"
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "libs"
  }
}
