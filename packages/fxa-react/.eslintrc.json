{
  "extends": ["plugin:fxa/recommended"],
  "plugins": ["fxa"],
  "parserOptions": {
    "ecmaVersion": "2020",
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
    "require-atomic-updates": "off",
    "space-unary-ops": "off",
    "no-useless-escape": "off"
  },
  "ignorePatterns": [
    "dist",
    "node_modules",
    "pm2.config.js",
    "storybook-static"
  ],
  "root": true
}
